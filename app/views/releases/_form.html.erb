<%= render 'shared/errors', obj: @venue %> 

<%= form_for @venue do |f| %>
  <div class="row main-text">
    <div class="col-sm-5">
      <%= f.label :name %>
    </div>
    <div class="col-sm-7">
      <%= f.text_field :name %>
    </div>
    <div class="col-sm-5">
      <%= f.label :city %>
    </div>
    <div class="col-sm-7">
      <%= f.text_field :city %>
    </div>
    <div class="col-sm-5">
      <%= f.label :country %>
    </div>
    <div class="col-sm-7">
      <%= f.text_field :country %>
    </div> 
    <div class="col-sm-5">
      <%= f.label :contact_name %> (Optional)
    </div>
    <div class="col-sm-7">
      <%= f.text_field :contact_name %>
    </div>
    <div class="col-sm-5">
      <%= f.label :contact_detail %> (Optional)
    </div>
    <div class="col-sm-7">
      <%= f.text_field :contact_detail %>
    </div>
    <div class="col-6 text-center mt-4">
      <%= f.submit(@venue.new_record? ? 'Create new Venue' : 'Edit Venue', class: "btn btn-default") %>
    </div>
    <div class="col-6 text-center mt-4">
      <button class="btn btn-default"><%= link_to "Cancel", :back, class: "form-button" %></button>
    </div>

  </div>
  
<% end %>

<hr/>