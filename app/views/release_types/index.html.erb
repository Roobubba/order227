<div class="row mb-3">
  <div class="col text-center">
    <%= link_to "ADD NEW RELEASE TYPE", new_release_type_path, class: "main-text main-text-header main-text-link" %>
  </div>
</div>

<%= render 'shared/page_title', title: "All Release Types" %>

<% @release_types.each do |release_type| %>
  <div class="row">
    <div class="col-lg-6">
      <section class="main-text">
        <p><strong>Release Type: </strong><%= release_type.name %></p>
      </section>
    </div>
    <div class="col-6 col-lg-3 text-center align-self-center">
      <%= link_to "EDIT", edit_release_type_path(release_type), class: "main-text main-text-header main-text-link" %>
    </div>
    <div class="col-6 col-lg-3 text-center align-self-center">
      <%= link_to "DELETE", release_type, method: :delete, class: "main-text main-text-header main-text-link", data: { confirm: "Are you sure you want to delete the release type: " + release_type.name } %>
    </div>
  </div>
  <hr/>
<% end %>
