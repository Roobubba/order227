<%= render 'shared/page_title', title: "Log in" %>

<div class="row">
  <div class="col text-center">
    <%= link_to "No account? Register here to subscribe to the mailing list", register_path, class: "main-text main-text-link" %>
  </div>
</div>
<hr/>

<%= form_tag '/login' do %>
  <div class="row main-text">

    <div class="col-sm-5 form-group">
      <%= label_tag :email, "Email"  %>
    </div>
    <div class="col-sm-7 form-group">
      <%= text_field_tag :email, nil, class: "form-control" %>
    </div>
    <div class="col-sm-5 form-group">
      <%= label_tag :password %>
    </div>
    <div class="col-sm-7 form-group">
      <%= password_field_tag :password, nil, class: "form-control" %>
    </div>      
    <div class="col-12 text-center mt-4 form-group">
      <%= submit_tag 'Log in', class: "btn btn-default" %>
    </div>

  </div>
  
<% end %>
