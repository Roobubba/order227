<%= render 'shared/errors', obj: @user %> 


<%= form_for @user do |f| %>
  <div class="row main-text">
    <div class="col-sm-5">
      <%= f.label :username %>
    </div>
    <div class="col-sm-7">
      <%= f.text_field :username %>
    </div>
    <div class="col-sm-5">
      <%= f.label :email %>
    </div>
    <div class="col-sm-7">
      <%= f.email_field :email %>
    </div>
    <div class="col-sm-5">
      <%= f.label :password %>
    </div>
    <div class="col-sm-7">
      <%= f.password_field :password %>
    </div>      
    <div class="col-sm-5">
      <%= f.label :password_confirmation %>
    </div>
    <div class="col-sm-7">
      <%= f.password_field :password_confirmation %>
    </div>
    <div class="col-12 text-center mt-4">
      <%= f.submit(@user.new_record? ? 'Subscribe to mailing list' : 'Edit User Profile', class: "btn btn-default") %>
    </div>

  </div>
  
<% end %>